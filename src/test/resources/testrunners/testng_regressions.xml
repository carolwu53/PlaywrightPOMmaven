<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Fay AM Portal Regression Suite" thread-count="2" parallel="tests" verbose="4">

    <listeners>
        <listener class-name="com.qa.fay.listeners.ExtentReportListener" />
    </listeners>

    <test name="Home Page Test">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="com.qa.fay.tests.HomePageTest">
            </class>
        </classes>
    </test>

    <test name="Home Page Test">
        <parameter name="browser" value="edge" />
        <classes>
            <class name="com.qa.fay.tests.HomePageTest">
            </class>
        </classes>
    </test>

    <test name="Home Page Test">
        <parameter name="browser" value="chromium" />
        <classes>
            <class name="com.qa.fay.tests.HomePageTest">
            </class>
        </classes>
    </test>

    <test name="Login Page Test">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="com.qa.fay.tests.LoginPageTest">
            </class>
        </classes>
    </test>

    <test name="Login Page Test">
        <parameter name="browser" value="edge" />
        <classes>
            <class name="com.qa.fay.tests.LoginPageTest">
            </class>
        </classes>
    </test>

    <test name="Login Page Test">
        <parameter name="browser" value="chromium" />
        <classes>
            <class name="com.qa.fay.tests.LoginPageTest">
            </class>
        </classes>
    </test>
</suite>